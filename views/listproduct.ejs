<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/locale/af.js">

<div class="main-content">
  <div class="page-top-info">
    <div class="container">
      <h4>Danh sách sản phẩm</h4>
    </div>
  </div>
  <div class="container p-tb-50">
    <div class="row">
      <div class="col-3">
        <div class="sidebar-categories">
          <div class="head">Danh mục sản phẩm</div>
          <ul class="main-categories">
            <% locals.cats.forEach(function(cat){ %>
            <li class="main-nav-list">
              <a
                data-toggle="collapse"
                href="#<%= cat.name%>"
                aria-expanded="false"
                aria-controls="shoes"
                ><span class="lnr lnr-arrow-right"></span><%= cat.name%><span
                  class="number"
                  >(<%= cat.amount%>)</span
                >
              </a>
              <ul
                class="collapse"
                id="<%= cat.name%>"
                data-toggle="collapse"
                aria-expanded="false"
                aria-controls="shoes"
              >
                <% cat.child.forEach(function(child, index){ %>
                <li class="main-nav-list child">
                  <a href="/products?q=<%= child%>"
                    ><%= child%><span class="number"
                      >(<%= cat.amountChild[index]%>)</span
                    ></a
                  >
                </li>
                <% }); %>
              </ul>
            </li>
            <% }); %>
          </ul>
        </div>
      </div>
      <div class="col-9">
        <!-- Start Filter Bar -->
        <div class="filter-bar d-flex flex-wrap align-items-center">
          <div class="sorting">
            <select class="nice-select sorting-select">
              <option value="1">Thời gian kết thúc giảm dần</option>
              <option selected value="2">Thời gian kết thúc tăng dần</option>
              <option value="3">Giá tăng dần</option>
              <option value="4">Giá giảm dần</option>
            </select>
          </div>
        </div>
        <!-- End Filter Bar -->
        <!-- Start Best Seller -->
        <section class="lattest-product-area pb-40 category-list">
          <div class="row" id="product-list">
            <!-- single product -->
            <% products.forEach(function(product){ %>
            <div class="col-lg-4 col-md-6">
              <div class="single-product">
                <img
                  class="img-fluid"
                  src="images/laptop/laptop-macbookpro-2017.png"
                  alt=""
                />
                <div class="product-details">
                  <h6><%= product.name%></h6>
                  <br />
                  <div class="price">
                    <h6><%= new Intl.NumberFormat('ja-JP').format(product.currentPrice)%> vnđ (hiện tại)</h6>
                    <!-- <h6 class="l-through">$210.00</h6> -->
                  </div>
                  <div class="price">
                    <span>Giá cao nhất: </span>
                    <span class="topBidder">Admin</span>
                  </div>
                  <div class="price">
                    <span>Ngày đăng:</span>
                    <span><%= product.sellDate.getDate() - 1%>/</span>
                    <span><%= product.sellDate.getMonth() + 1%>/</span>
                    <span><%= product.sellDate.getFullYear()%></span>
                  </div>
                  <div class="price">
                    <p>Còn lại: <%= product.sellDate%></p>
                  </div>
                  <div class="price">
                    <p>Số lượt ra giá: 12</p>
                  </div>
                  <div class="prd-bottom">
                    <a href="" class="social-info">
                      <span class="fa fa-shopping-bag"></span>
                      <p class="hover-text">Đấu giá</p>
                    </a>
                    <a href="" class="social-info">
                      <span class="fa fa-heart"></span>
                      <p class="hover-text">Yêu thích</p>
                    </a>
                    <a href="productdetail.html" class="social-info">
                      <span class="fa fa-info"></span>
                      <p class="hover-text">Chi tiết</p>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </section>
        <!-- End Best Seller -->
        <!-- Start Filter Bar -->
        <div
          class="filter-bar d-flex flex-wrap align-items-center justify-content-center"
        >
          <div class="pagination text-center">
            <a class="prev-arrow " href="/products?page=<%= currentPage-1 %>"
              ><i class="fa fa-long-arrow-left" aria-hidden="true"></i
            ></a>
            <% for(let i = 1; i <= totalPage ; i++) { if(i == currentPage) { %>
            <a href="/products?page=<%= i%>" class="active"><%= currentPage%></a>
            <% } else { %>
            <a href="/products?page=<%= i%>"><%= i%></a>
            <% }}; %> <%#
            <a href="#" class="dot-dot"
              ><i class="fa fa-ellipsis-h" aria-hidden="true"></i
            ></a>
            %> <% if(currentPage < totalPage) { %>
            <a href="/products?page=<%= currentPage + 1%>" class="next-arrow"
              ><i class="fa fa-long-arrow-right" aria-hidden="true"></i
            ></a>
            <%} else { %>
            <a href="/products?page=<%= currentPage%>" class="next-arrow"
              ><i class="fa fa-long-arrow-right" aria-hidden="true"></i
            ></a>
            <% } %>
          </div>
        </div>
        <!-- End Filter Bar -->
      </div>
    </div>
  </div>
</div>
