<script
  src="https://cdn.tiny.cloud/1/er3jle0ey3awkybppbmddax0l2mudhq8ct2uhhmvogt27rrp/tinymce/5/tinymce.min.js"
  referrerpolicy="origin"
></script>
<script>
  tinymce.init({
    selector: "textarea",
    height: 400,
    plugins: "paste image link autolink lists table media",
    menubar: false,
    toolbar: [
      "undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright",
      "forecolor backcolor",
      "table link image media"
    ]
  });
</script>

<div class="main-content">
  <div class="registration-page container p-tb-40">
    <div class="post-content">
      <form
        method="POST"
        id="post-form"
        class="post-form"
      >
        <h1 class="post-form-title text-center">Thêm thông tin sản phẩm</h1>
        <div class="row p-t-15">
          <div class="col-12">
            <div class="form-group">
              <label for="name" class="label-input">Tên sản phẩm</label>
              <input
                type="text"
                class="form-input"
                name="name"
                id="name"
                value="<%= product[0].name%>"
                placeholder="<%= product[0].name%>"
                readonly
              />
              <input type="hidden" name="id" value="<%= product[0].id%>">
            </div>
          </div>
          <div class="col-12">
            <div class="form-group">
              <label for="description" class="label-input"
                >Mô tả chi tiết sản phẩm</label
              >
              <textarea
                name="description"
                id="description"
                cols="30"
                rows="10"
                class="form-input w-100"
                placeholder="Nhập mô tả sản phẩm"
              ></textarea>
            </div>
          </div>
        </div>
        <div class="text-center fs-20">
          <i class="fa fa-arrow-left" style="color: #007bff;"></i>
          <a href="/user">
            Quay lại
          </a>
        </div>
        <div class="container-login-form-btn p-tb-25">
          <div class="wrap-login-form-btn  w-50">
            <div class="login-form-bgbtn"></div>
            <button type="submit" class="login-form-btn">
              Cập nhật sản phẩm
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
