<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Chi tiết danh mục</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="/admin">Trang chủ</a></li>
          <li><a href="/admin/categories">Quản lý danh mục</a></li>
          <li class="active">Chi tiết danh mục</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="content mt-3">
  <div class="animated">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title"
              >Chi tiết danh mục: <%= cat.name%></strong
            >
            <a class="btn btn-sm btn-primary" href="/admin/categories/edit/<%= cat._id%>" role="button">
              <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
          </div>
          <div class="card-body">
            <table
              id="bootstrap-data-table-export"
              class="table table-striped table-bordered"
            >
              <thead>
                <th>STT</th>
                <th>Tên danh mục con</th>
                <th>Số lượng</th>
              </thead>
              <tbody>
              <% cat.child.forEach(function(element, index){ %>
                <tr>
                    <td> <%= index+1%></td>
                    <td> <%= element%></td>
                    <td> <%= cat.amountChild[index]%></td>
                </tr>
              <%});%>
              </tbody>
            </table>
            <%# Pagination %>
            <nav class="d-flex justify-content-end">
              <ul class="pagination">
                <% if(currentPage == 1){ %>
                <li class="page-item disabled">
                  <a
                    class="page-link"
                    href="/admin/categories/<%= cat.id%>?page=<%= currentPage-1 %>"
                    >Previous</a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/categories/<%= cat.id%>?page=<%= currentPage-1 %>"
                    >Previous</a
                  >
                </li>
                <% } %> <% for(let i = 1; i <= totalPage; i++) { %> <% if (i ==
                currentPage) { %>
                <li class="page-item active">
                  <a class="page-link" href="/admin/categories/<%= cat.id%>"
                    ><%= i %><span class="sr-only">(current)</span></a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/categories/<%= cat.id%>?page=<%= i %>"
                  >
                    <%= i %></a
                  >
                </li>
                <% }%> <% }; %> <% if(currentPage == totalPage){ %>
                <li class="page-item disabled">
                  <a
                    class="page-link"
                    href="/admin/categories/<%= cat.id%>?page=<%= currentPage+1 %>"
                    >Next</a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/categories/<%= cat.id%>?page=<%= currentPage+1 %>"
                    >Next</a
                  >
                </li>
                <% } %>
              </ul>
            </nav>
            <%# Pagination end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
