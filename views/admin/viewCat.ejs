<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Chi tiết danh mục</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="/admin">Trang chủ</a></li>
          <li><a href="/admin/listcategories">Quản lý danh mục</a></li>
          <li class="active">Chi tiết danh mục</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="content mt-3">
  <div class="animated">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title"
              >Chi tiết danh mục: <%= cat.catName%></strong
            >
          </div>
          <% if (!products.length) {%>
          <div class="card-body">
            <h5>Không có dữ liệu</h5>
          </div>
          <% } else {%>
          <div class="card-body">
            <table
              id="bootstrap-data-table-export"
              class="table table-striped table-bordered"
            >
              <thead>
                <th>STT</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng sản phẩm</th>
                <th>Người bán</th>
                <th>Xem chi tiết</th>
                <th>Xoá</th>
              </thead>
              <tbody></tbody>
            </table>
            <%# Pagination %>
            <nav class="d-flex justify-content-end">
              <ul class="pagination">
                <% if(currentPage == 1){ %>
                <li class="page-item disabled">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= currentPage-1 %>"
                    >Previous</a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= currentPage-1 %>"
                    >Previous</a
                  >
                </li>
                <% } %> <% for(let i = 1; i <= totalPage; i++) { %> <% if (i ==
                currentPage) { %>
                <li class="page-item active">
                  <a class="page-link" href="#"
                    ><%= i %><span class="sr-only">(current)</span></a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= i %>"
                  >
                    <%= i %></a
                  >
                </li>
                <% }%> <% }; %> <% if(currentPage == totalPage){ %>
                <li class="page-item disabled">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= currentPage+1 %>"
                    >Next</a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= currentPage+1 %>"
                    >Next</a
                  >
                </li>
                <% } %>
              </ul>
            </nav>
            <%# Pagination end %>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
