<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Quản lý danh mục</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="/admin">Trang chủ</a></li>
          <li class="active">Quản lý danh mục</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="content mt-3">
  <div class="animated">
    <div class="card">
      <div class="card-header">
        <div class="d-inline-block w-50">
          <strong class="card-title">Cập nhật danh mục sản phẩm: </strong>
          <a href="/admin/listcategories">
            <button class="m-l-10 btn btn-outline-success">Cập nhật</button></a
          >
        </div>
        <div class="d-inline-block w-25">
          <strong class="card-title">Thêm: </strong>
          <button class="m-l-10 btn btn-outline-success add-cat">
            <i class="fa fa-plus"></i>
          </button>
        </div>
        <form
          method="POST"
          class="add-cat-form input-group mb-3 mt-3"
          style="display: none"
        >
          <input
            type="text"
            class="form-control"
            id="newCat"
            name="newCat"
            placeholder="Tên danh mục mới"
          />
          <div class="input-group-append">
            <button
              class="btn btn-outline-primary accept-add-cat"
              type="submit"
              id="button-addon2"
            >
              Xác nhận
            </button>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Danh sách danh mục</strong>
          </div>
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Cảnh báo
                  </h5>
                  <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Bạn có chắc muốn xoá?
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >
                    Huỷ
                  </button>
                  <form action="/admin/listcategories/delete" method="post">
                    <input type="hidden" class="catName-del" name="catName-del" value="">
                    <button type="submit" class="btn btn-primary accept-del">
                      Chấp nhận
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body">
            <table
              id="bootstrap-data-table-export"
              class="table table-striped table-bordered"
            >
              <thead>
                <th>STT</th>
                <th>Tên danh mục</th>
                <th>Số lượng sản phẩm</th>
                <th>Xem chi tiết</th>
                <th>Xoá</th>
              </thead>
              <tbody>
                <% cats.forEach(function(cat, index){ %>
                <tr class="cat">
                  <td><%= index+1 %></td>
                  <td class="catName"><%= cat.name %></td>
                  <td><%= cat.amount%></td>
                  <td>
                    <a href="/admin/listcategories/<%= cat._id %>">
                      <button class="btn btn-outline-primary">Xem</button></a
                    >
                  </td>
                  <td>
                    <% if (cat.amount == 0) { %>
                    <button
                      type="button"
                      data-toggle="modal"
                      data-target="#exampleModal"
                      class="btn-del btn btn-outline-danger"
                    >
                      <i class="fa fa-minus"></i>
                    </button>
                    <% } %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
            <%# Pagination %>
            <nav class="d-flex justify-content-end">
              <ul class="pagination">
                <% if(currentPage == 1){ %>
                <li class="page-item disabled">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= currentPage-1 %>"
                    >Previous</a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= currentPage-1 %>"
                    >Previous</a
                  >
                </li>
                <% } %> <% for(let i = 1; i <= totalPage; i++) { %> <% if (i ==
                currentPage) { %>
                <li class="page-item active">
                  <a class="page-link" href="#"
                    ><%= i %><span class="sr-only">(current)</span></a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= i %>"
                  >
                    <%= i %></a
                  >
                </li>
                <% }%> <% }; %> <% if(currentPage == totalPage){ %>
                <li class="page-item disabled">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= currentPage+1 %>"
                    >Next</a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/listcategories?page=<%= currentPage+1 %>"
                    >Next</a
                  >
                </li>
                <% } %>
              </ul>
            </nav>
            <%# Pagination end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
