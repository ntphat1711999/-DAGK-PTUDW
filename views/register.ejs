<div class="main-content">
    <div class="signup-page container">
        <div class="wrap-login text-center">
            <form method="POST" id="signup-form" class="login-form">
                <span class="login-form-title p-tb-15">
                    Đăng ký
                </span>

                <!--Notification-->
                <h5 style="color: red;"><%= error %></h5>

                <div class="wrap-input text-left validate-input" data-validate="Username is required">
                    <span class="label-input">Tài khoản</span>
                    <small>(nhiều nhất 20 ký tự)</small>
                    <input class="input" type="text" name="username" placeholder="Nhập tài khoản"/>
                    <span class="focus-input" data-symbol="&#xf206;"></span>
                </div>

                <div class="wrap-input text-left validate-input p-t-5" data-validate="Password is required">
                    <span class="label-input">Mật khẩu</span> 
                    <small>(ít nhất 5 ký tự và phải có 1 số)</small>
                    <input type="password" class="input" name="password" id="password" placeholder="Mật khẩu"
                        />
                    <span class="focus-input" data-symbol="&#xf190;"></span>
                    <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                </div>

                <div class="wrap-input text-left validate-input p-t-5" data-validate="Name is required">
                    <span class="label-input">Họ tên</span>
                    <small>(ít nhất 5 ký tự nhiều nhất 60 ký tự)</small>
                    <input type="text" class="input" name="name" id="name" placeholder="Nhập họ tên" />
                    <span class="focus-input" data-symbol="&#xf10c;"></span>
                </div>
                
                <div class="wrap-input text-left validate-input p-t-5" data-validate="Email is required">
                    <span class="label-input">Email</span>
                    <input class="input" type="email" name="email" placeholder="Nhập email" />
                    <span class="focus-input" data-symbol="&#xf15a;"></span>
                </div>

                <div class="wrap-input text-left validate-input p-t-5" data-validate="Address is required">
                    <span class="label-input">Địa chỉ</span>
                    <input type="text" class="input" name="address" id="address" placeholder="Nhập địa chỉ" />
                    <span class="focus-input" data-symbol="&#xf299;"></span>
                </div>
                <div style="margin: 20px;">
                    <div class="g-recaptcha" data-sitekey="6Lftp8wUAAAAAGxWkK0TFRNbsoZACSlW8EZiects"></div >
                </div>

                <p class="loginhere">
                    Đã có tài khoản ?
                    <a href="/login" class="loginhere-link">Đăng nhập</a>
                </p>

                <div class="container-login-form-btn p-b-25">
                    <div class="wrap-login-form-btn">
                        <div class="login-form-bgbtn"></div>
                        <button class="login-form-btn">
                            Đăng ký
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>