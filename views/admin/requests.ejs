<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Danh sách người dùng</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="/admin">Trang chủ</a></li>
          <li>Quản lý người dùng</li>
          <li class="active">Yêu cầu nâng cấp</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="card">
      <div class="card-header">
        <div class="d-inline-block w-50">
          <strong class="card-title">Cập nhật yêu cầu nâng cấp: </strong>
          <a href="/admin/requests">
            <button class="m-l-10 btn btn-outline-success">Cập nhật</button>
          </a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Danh sách yêu cầu nâng cấp</strong>
          </div>
          <div class="card-body">
            <table
              id="bootstrap-data-table-export"
              class="table table-striped table-bordered"
            >
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Tài khoản</th>
                  <th>Chấp thuận</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i = 0; i < users.length; i++){ %>
                <tr>
                  <td><%= i+1%></td>
                  <td><%= users[i].username%></td>
                  <td>
                    <a href="/admin/requests/refuse/<%= users[i]._id%>">
                      <button type="button" class="btn-argee btn btn-primary">
                        <i class="fa fa-check"></i>
                      </button>
                    </a>
                    <a href="/admin/requests/accept/<%= users[i]._id%>">
                      <button type="button" class="btn-argee btn btn-danger">
                        <i class="fa fa-times"></i>
                      </button>
                    </a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
            <%# Pagination %>
            <nav class="d-flex justify-content-end">
              <ul class="pagination">
                <% if(currentPage == 1){ %>
                <li class="page-item disabled">
                  <a
                    class="page-link"
                    href="/admin/categories?page=<%= currentPage-1 %>"
                    >Previous</a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/categories?page=<%= currentPage-1 %>"
                    >Previous</a
                  >
                </li>
                <% } %> <% for(let i = 1; i <= totalPage; i++) { %> <% if (i ==
                currentPage) { %>
                <li class="page-item active">
                  <a class="page-link" href="#"
                    ><%= i %><span class="sr-only">(current)</span></a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a class="page-link" href="/admin/categories?page=<%= i %>">
                    <%= i %></a
                  >
                </li>
                <% }%> <% }; %> <% if(currentPage == totalPage){ %>
                <li class="page-item disabled">
                  <a
                    class="page-link"
                    href="/admin/categories?page=<%= currentPage+1 %>"
                    >Next</a
                  >
                </li>
                <% } else { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/categories?page=<%= currentPage+1 %>"
                    >Next</a
                  >
                </li>
                <% } %>
              </ul>
            </nav>
            <%# Pagination end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- .animated -->
</div>
